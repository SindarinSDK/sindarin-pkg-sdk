{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "description": "Release build for Linux using GCC",
      "inherits": "release-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "description": "Debug build for Linux using GCC",
      "inherits": "debug-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "description": "Release build for Linux using Clang",
      "inherits": "release-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-clang-debug",
      "displayName": "Linux Clang Debug",
      "description": "Debug build for Linux using Clang",
      "inherits": "debug-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-clang-release",
      "displayName": "Windows Clang Release",
      "description": "Release build for Windows using Clang/LLVM-MinGW",
      "inherits": "release-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-clang-debug",
      "displayName": "Windows Clang Debug",
      "description": "Debug build for Windows using Clang",
      "inherits": "debug-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "macos-clang-release",
      "displayName": "macOS Clang Release",
      "description": "Release build for macOS using Apple Clang",
      "inherits": "release-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-clang-debug",
      "displayName": "macOS Clang Debug",
      "description": "Debug build for macOS using Apple Clang",
      "inherits": "debug-base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "ci-linux",
      "displayName": "CI Linux",
      "description": "CI build preset for Linux (GitHub Actions)",
      "inherits": "linux-gcc-release",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "ci-windows",
      "displayName": "CI Windows",
      "description": "CI build preset for Windows (GitHub Actions)",
      "inherits": "windows-clang-release",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "ci-macos",
      "displayName": "CI macOS",
      "description": "CI build preset for macOS (GitHub Actions)",
      "inherits": "macos-clang-release",
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-gcc-release",
      "configurePreset": "linux-gcc-release"
    },
    {
      "name": "linux-gcc-debug",
      "configurePreset": "linux-gcc-debug"
    },
    {
      "name": "linux-clang-release",
      "configurePreset": "linux-clang-release"
    },
    {
      "name": "linux-clang-debug",
      "configurePreset": "linux-clang-debug"
    },
    {
      "name": "windows-clang-release",
      "configurePreset": "windows-clang-release"
    },
    {
      "name": "windows-clang-debug",
      "configurePreset": "windows-clang-debug"
    },
    {
      "name": "macos-clang-release",
      "configurePreset": "macos-clang-release"
    },
    {
      "name": "macos-clang-debug",
      "configurePreset": "macos-clang-debug"
    },
    {
      "name": "ci-linux",
      "configurePreset": "ci-linux"
    },
    {
      "name": "ci-windows",
      "configurePreset": "ci-windows"
    },
    {
      "name": "ci-macos",
      "configurePreset": "ci-macos"
    }
  ]
}
